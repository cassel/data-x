{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Data-X",
  "version": "0.4.1",
  "identifier": "us.cassel.data-x",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Data-X",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app", "nsis", "msi", "deb", "rpm", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../target/release/data-x": "bin/data-x-tui"
    },
    "macOS": {
      "minimumSystemVersion": "10.14",
      "entitlements": "./entitlements.plist",
      "exceptionDomain": null,
      "signingIdentity": "-"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "category": "DeveloperTool",
    "shortDescription": "Disk space analyzer with visualizations",
    "longDescription": "Data-X is a powerful disk space analyzer that helps you visualize and manage your storage with multiple visualization options including treemap, sunburst, icicle charts and more."
  }
}
